<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:gravity="center"
    android:background="@color/meu_gelo">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:layout_weight="0"
        android:background="#003B75"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="35sp"
            android:text="CALCULADORA DO LUIZ"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:gravity="center"
            android:shadowColor="@android:color/black"
        />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:text="HISTORICO"
        android:textAlignment="textEnd"
        android:textSize="40sp" >
    </TextView>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="VISOR"
        android:textAlignment="textEnd"
        android:textSize="80sp"
        android:textStyle="bold">

    </EditText>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="5"
        android:background="#6295B8"
        android:orientation="horizontal">

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:stretchColumns="0,1,2,3"
            android:gravity="center" >

            <TableRow>

                <Button
                    android:text="C"
                    android:textSize="50sp"
                    app:cornerRadius="30dp"
                    app:backgroundTint="#0E527E" />
                <Button
                    android:text="( )"
                    android:textSize="50sp"
                    app:cornerRadius="30dp"
                    app:backgroundTint="#0E527E" />
                <Button
                    android:text="%"
                    android:textSize="50sp"
                    app:cornerRadius="30dp"
                    app:backgroundTint="#0E527E" />
                <Button
                    android:text="÷"
                    android:textSize="50sp"
                    app:cornerRadius="30dp"
                    app:backgroundTint="#0E527E" />
            </TableRow>

            <TableRow>
                <Button
                    android:text="7"
                    android:textSize="50sp"
                    app:cornerRadius="30dp"
                    app:backgroundTint="#50789E" />
                <Button
                    android:text="8"
                    android:textSize="50sp"
                    app:cornerRadius="30dp"
                    app:backgroundTint="#50789E" />
                <Button
                    android:text="9"
                    android:textSize="50sp"
                    app:cornerRadius="30dp"
                    app:backgroundTint="#50789E" />
                <Button
                    android:text="×"
                    android:textSize="50sp"
                    app:cornerRadius="30dp"
                    app:backgroundTint="#0E527E" />
            </TableRow>

            <TableRow>
                <Button
                    android:text="4"
                    android:textSize="50sp"
                    app:cornerRadius="30dp"
                    app:backgroundTint="#50789E" />
                <Button
                    android:text="5"
                    android:textSize="50sp"
                    app:cornerRadius="30dp"
                    app:backgroundTint="#50789E" />
                <Button
                    android:text="6"
                    android:textSize="50sp"
                    app:cornerRadius="30dp"
                    app:backgroundTint="#50789E" />
                <Button
                    android:text="-"
                    android:textSize="50sp"
                    app:cornerRadius="30dp"
                    app:backgroundTint="#0E527E" />
            </TableRow>

            <TableRow>
                <Button
                    android:text="1"
                    android:textSize="50sp"
                    app:cornerRadius="30dp"
                    app:backgroundTint="#50789E" />
                <Button
                    android:text="2"
                    android:textSize="50sp"
                    app:cornerRadius="30dp"
                    app:backgroundTint="#50789E" />
                <Button
                    android:text="3"
                    android:textSize="50sp"
                    app:cornerRadius="30dp"
                    app:backgroundTint="#50789E" />
                <Button
                    android:text="+"
                    android:textSize="50sp"
                    app:cornerRadius="30dp"
                    app:backgroundTint="#0E527E" />
            </TableRow>

            <TableRow>
                <Button
                    android:text="0"
                    android:textSize="50sp"
                    app:cornerRadius="30dp"
                    app:backgroundTint="#50789E" />
                <Button
                    android:text=","
                    android:textSize="50sp"
                    app:cornerRadius="30dp"
                    app:backgroundTint="#50789E" />
                <Button
                    android:text="⌫"
                    android:textSize="50sp"
                    app:cornerRadius="30dp"
                    app:backgroundTint="#425375" />
                <Button
                    android:text="="
                    android:textSize="50sp"
                    app:cornerRadius="30dp"
                    app:backgroundTint="#0E527E" />
            </TableRow>
        </TableLayout>

    </LinearLayout>

</LinearLayout>